{
    "name": "deon-grammar",
    "version": "0.0.8",
    "displayName": "deon",
    "publisher": "plurid",
    "icon": "assets/icon.png",
    "galleryBanner": {
        "color": "#222222",
        "theme": "dark"
    },
    "description": "Syntax highlighting for .deon files.",
    "author": "ly3xqhl8g9 <ly3xqhl8g9@plurid.com> (https://plurid.com)",
    "license": "SEE LICENSE IN LICENSE",
    "repository": {
        "type": "git",
        "url": "https://github.com/plurid/deon"
    },
    "engines": {
        "vscode": "^1.48.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "deon",
                "extensions": [
                    ".deon"
                ],
                "aliases": [
                    "deon",
                    "Deon"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "deon",
                "scopeName": "source.deon",
                "path": "./syntaxes/deon.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "deon",
                "path": "./snippets/deon.json"
            }
        ]
    },
    "scripts": {
        "compile": "js-yaml syntaxes/deon.tmLanguage.yaml > syntaxes/deon.tmLanguage.json",
        "package": "yarn compile && vsce package --yarn",
        "install.local": "code --install-extension deon-grammar-0.0.8.vsix",
        "run.local": "yarn package && yarn install.local",
        "publish": "yarn package && vsce publish -m \"\""
    },
    "devDependencies": {
        "js-yaml": "^3.14.1"
    }
}

{
  "name": "deon",
  "scopeName": "source.deon",
  "patterns": [
    {
      "include": "#core"
    }
  ],
  "repository": {
    "core": {
      "patterns": [
        {
          "include": "#general"
        },
        {
          "include": "#curly"
        }
      ]
    },
    "general": {
      "patterns": [
        {
          "match": "^(inject) (\\w+) (from) (\\w+) (with)? (\\w+)?",
          "captures": {
            "1": {
              "name": "entity.name.function.deon"
            },
            "2": {
              "name": "variable.other.constant.deon"
            },
            "3": {
              "name": "entity.name.function.deon"
            },
            "4": {
              "name": "variable.other.constant.deon"
            },
            "5": {
              "name": "entity.name.function.deon"
            },
            "6": {
              "name": "variable.other.constant.deon"
            }
          }
        },
        {
          "match": "^(import) (\\w+) (from) (\\w+) (with)? (\\w+)?",
          "captures": {
            "1": {
              "name": "entity.name.function.deon"
            },
            "2": {
              "name": "variable.other.constant.deon"
            },
            "3": {
              "name": "entity.name.function.deon"
            },
            "4": {
              "name": "variable.other.constant.deon"
            },
            "5": {
              "name": "entity.name.function.deon"
            },
            "6": {
              "name": "variable.other.constant.deon"
            }
          }
        },
        {
          "match": "^(\\w+)",
          "captures": {
            "1": {
              "name": "variable.other.property.deon"
            }
          }
        },
        {
          "match": "(#.+)\\b",
          "captures": {
            "1": {
              "name": "storage.type.struct"
            }
          }
        },
        {
          "match": "\\/\\/.+",
          "name": "comment.deon"
        },
        {
          "match": "^(\\/\\*(.+)?)|((\\s+)?\\*(.+)?\\/?)",
          "name": "comment.deon"
        }
      ]
    },
    "curly-keywords": {
      "patterns": [
        {
          "match": "^\\s*?(\\w+)",
          "captures": {
            "1": {
              "name": "variable.other.property.deon"
            }
          }
        }
      ]
    },
    "curly": {
      "begin": "{",
      "end": "}",
      "beginCaptures": {
        "0": {
          "name": "punctuation.paren.open.curly"
        }
      },
      "endCaptures": {
        "0": {
          "name": "punctuation.paren.close.curly"
        }
      },
      "name": "expression.group.curly",
      "patterns": [
        {
          "include": "#core"
        },
        {
          "include": "#curly-keywords"
        }
      ]
    }
  }
}
